<main id="main">


    <section id="contact" class="contact section-bg">
        <div class="container">

            <div class="section-title">
                <h2> New Case </h2>
            </div>

            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="200">


                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form action="forms/contact.php" method="post" role="form" class="php-email-form">

                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="" class="active nav-link">
                                    <div class="subTitle">
                                        <h5> Patient Information</h5>
                                    </div>
                                </a>
                            </li>
                        </ul>



                        <div class="row">

                            <div class="form-group col-md-6">
                                <label for="name">Patient file</label>
                                <input type="number" min="1" name="Patient file" class="form-control" id="pf" required>
                            </div>

                            <div class="form-group col-md-6">
                                <label for="name"> Gender </label>
                                <!-- Html.DropDownListFor(m => m.StudentGender,  new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender") -->

                                <select class="form-control" id="Gender" name="gender" required>
                                    <option>Select</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>


                        </div>

                        <div class="row">



                            <div class="form-group col-md-6">
                                <label for="name"> Citizenship </label>
                                <select class="form-control" id="ctz" name="Citizenship" required>
                                    <option>Select</option>
                                    <option>Saudi</option>
                                    <option>Non Saudi</option>
                                </select>
                            </div>


                            <div class="form-group col-md-6">
                                <label for="name"> Health Category </label>
                                <!-- Html.DropDownListFor(m => m.StudentGender,  new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender") -->

                                <select class="form-control" id="hc" name="Health Category" required>
                                    <option>Select</option>
                                    <option>Healthy</option>
                                    <option>Compromised</option>
                                    <option>Special care</option>
                                </select>
                            </div>

                        </div>




                        <div class="form-group">
                            <label for="name"> Rotation</label>
                            <!-- Html.DropDownListFor(m => m.StudentGender,  new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender") -->

                            <select class="form-control" id="rota" name="Rotation" required>
                                <option>Select</option>
                                <option>O.S</option>
                                <option>ER</option>
                                <option>CCC</option>
                                <option>Hospital</option>
                                <option>Secondary hospital</option>
                                <option>Public health </option>
                            </select>
                        </div>






                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="" class="active nav-link">
                                    <div class="subTitle">
                                        <h5>Case Information</h5>
                                    </div>

                                </a>
                            </li>
                        </ul>


                        <div class="row">


                            <div class="form-group col-md-6">
                                <label for="name"> Age group </label>
                                <select class="form-control" id="ag" name="Age group" required>
                                    <option>Select</option>
                                    <option>Pediatric</option>
                                    <option>Adult</option>
                                    <option>Geriatric</option>
                                </select>
                            </div>


                            <div class="form-group col-md-6">
                                <label for="name"> Department </label>

                                <select class="form-control" id="dep" name="Department" required>
                                    <option>Select</option>
                                    <option>dep 2</option>
                                    <option>dep 2</option>
                                    <option>dep 3</option>


                                </select>
                            </div>


                        </div>



                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name"> Case</label>

                                <select class="form-control" id="case" name="Case" required>
                                    <option>Select</option>
                                    <option>case1</option>
                                    <option>case2</option>
                                    <option>case3</option>


                                </select>
                            </div>

                            <div class="form-group col-md-6">

                                <div class="form-group">
                                    <label for="name"> Tooth No</label>
                                    <select class="form-control" id="tooth" name="Tooth" required>
                                        <option>Select</option>
                                        <option>Tooth 1</option>
                                        <option>Tooth 2</option>
                                        <option>Tooth 3</option>


                                    </select>


                                </div>

                            </div>
                        </div>




                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="" class="active nav-link">
                                    <div class="subTitle">
                                        <h5>Assigned to</h5>
                                    </div>

                                </a>
                            </li>
                        </ul>

                        <div class="form-group">
                            <label for="name"> Supervisor</label>
                            <!-- Html.DropDownListFor(m => m.StudentGender,  new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender") -->

                            <select class="form-control" id="supervisor" name="Supervisor" required>
                                <option>Select</option>
                                <option>dr1</option>
                                <option>dr2</option>
                                <option>d3</option>
                                <option>d4</option>

                            </select>
                        </div>


                        <div id="Hidden_resubmition_case">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a href="" class="active nav-link">
                                        <div class="subTitle">
                                            <h5 style="color:hotpink !important">Duplicate Case !</h5>
                                        </div>

                                    </a>
                                </li>
                            </ul>
                            <div class="form-group">
                                <label for="name"> You have submitted this case before, please write the reason of the re-submition</label>
                                <!-- Html.DropDownListFor(m => m.StudentGender,  new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender") -->

                                <textarea type="text" min="1" name="Patient file" class="form-control" id="reason" required>
</textarea>
                            </div>
                        </div>
               


                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your case has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button type="submit">Submit case</button></div>



                    </form>
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->


</main><!-- End #main -->
